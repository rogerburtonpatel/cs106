#!/bin/bash
# 
# Purpose: runs tests from .vo files
# 

## Usage: votests
## 
## 
## 
## 
## author: rab
## date:  Mon Jan 30 16:04:53 EST 2023

# TODO: use grep conditional capture to print failing tests.

BASEDIR=/h/rburto03/106/student-2023s

SVMDIR=$BASEDIR/src/svm
UFTDIR=$BASEDIR/src/uft
TESTDIR=$BASEDIR/tests/tests07


cd $SVMDIR

# compile if needed
if [[ ! -e $BASEDIR/bin/svm ]]; then
    echo "No svm executable found; compiling..."
    make
    if [[ "$?" -ne "0" ]]; then
        echo "Exiting on compilation failure."
        exit 1
    fi
fi

cd $UFTDIR

# compile if needed
if [[ ! -e $BASEDIR/bin/uft ]]; then
    echo "No uft executable found; compiling..."
    make
    if [[ "$?" -ne "0" ]]; then
        echo "Exiting on compilation failure."
        exit 1
    fi
fi

# run tests
run_tests () {
    
    pass=0

    for file in $TESTDIR/*vo; do
        svm $file 2>&1  | grep -v "fail" > /dev/null # grep returns 0 if found
        pass=$((pass + $?))
    done


    # for file in $TESTDIR/*vs; do
    #     uft vs-vo $file | svm $file 2>&1 # | grep -v "fail" > /dev/null # grep returns 0 if found
    #     pass=$((pass + $?))
    # done

    if [[ "$pass" -eq "0" ]]; then 
        echo "All tests passed."
    else 
        echo "Test failure-- comment out grep pipe and look closely"
    fi
}

main () {

    run_tests
}

main